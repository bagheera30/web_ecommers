---
import Layouts from "../../../layouts/Layouts.astro";

import Nav from "../../../components/header/Nav.astro";
import { Image } from "astro:assets";
import { getApiResponseById, patchApiResponse } from "../../../libs/api-libs";
import Foot from "../../../components/header/Foot.astro";

import FormProduct from "../../../components/form/FormProduct.tsx";

const { id } = Astro.params;

const getProduct = await getApiResponseById("products", id);

export const prerender = false;
---

<Layouts title="update data">
  <Nav />
  <div class="h-screen">
    <div
      class="flex justify-center items-center max-h-screen bg-[#E5E5E5] pt-32 pb-32"
    >
      <div class="w-96 p-6 bg-zinc-100 rounded-md shadow-lg">
        <FormProduct product={getProduct.data} client:load />
      </div>
    </div>
  </div>
</Layouts>
