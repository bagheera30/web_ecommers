---
import ProductList from "../../components/ProductList/ProductList.astro";
import Layouts from "../../layouts/Layouts.astro";
import { getApiResponse } from "../../libs/api-libs";
import Foot from "../../components/header/Foot.astro";
const product = await getApiResponse("products", "limit=10");

import { Icon } from "astro-icon";
---

<Layouts title="Produk">
  <div class="h-auto">
    <div class="navbar bg-[#5ED2B7] bg-opacity-9 md:text-">
      <div class="flex-1">
        <a
          href="/"
          class="btn btn-ghost normal-case text-3xl md:text-3xl text-white"
          >MultiSellerSquare</a
        >
      </div>
      <div class="flex-none gap-2 flex md:justify-between md:w-auto">
        <div class="flex justify-between items-center">
          <a href="/dasbord" class="btn rounded-3xl mx-2 w-32 h-10">Dasbord</a>
          <a href="/Products" class="btn rounded-3xl mx-2 w-32 h-10">Products</a
          >
          <button class="btn rounded-3xl mx-2 w-32 h-10">Contact Us</button>
        </div>

        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-circle avatar">
            <div class="w-24 rounded-full">
              <Icon name="mdi:account-outline" class="text-gray-200" />
            </div>
          </label>
          <ul
            tabindex="0"
            class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52"
          >
            <li><a class="justify-between" href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="">
      <ProductList api={product} />
    </div>
  </div>
  <Foot />
</Layouts>
