---
import { Image } from "astro:assets";
import Layouts from "../../layouts/Layouts.astro";
const { api } = Astro.props;
---

<Layouts title="produk">
  <div
    class="grid md:grid-cols-5 sm:grid-cols-3 grid-cols-2 gap-4 bg-[#E5E5E5]"
  >
    {
      api.map((products) => {
        return (

          <div class="card  shadow-xl py-10  w-auto h-5/6 bg-[#5ED2B7]">

            <figure>
              <Image
                src={products.image}
                alt={products.title}

                width={10}
                height={10}
                class="h-50 w-24 rounded"

              />
            </figure>
            <div class="card-body">
              <h2 class="card-title font-bold text-stone-700">{products.title}</h2>
              <p class="text-lg text-stone-700 font-block">$ {products.price}</p>
              <div class="card-actions justify-end">
                <a href={`/produk`}>
                  <button class="btn btn-primary">detail</button>
                </a>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</Layouts>
