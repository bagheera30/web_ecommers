---
import { Image } from "astro:assets";
import Layouts from "../../layouts/Layouts.astro";
const { api } = Astro.props;
---

<Layouts title="produk">
  <div
    class="grid md:grid-cols-5 sm:grid-cols-3 grid-cols-2 gap-4 bg-slate-900"
  >
    {
      api.map((products) => {
        return (
          <div class="card  shadow-xl  w-auto h-5/6 bg-black">
            <figure>
              <Image
                src={products.image}
                alt={products.title}
                width={50}
                height={60}
                class="h-64 w-48"
              />
            </figure>
            <div class="card-body">
              <h2 class="card-title font-bold text-white">{products.title}</h2>
              <p class="text-lg text-red-700">$ {products.price}</p>
              <div class="card-actions justify-end">
                <a href={`/produk`}>
                  <button class="btn btn-primary">detail</button>
                </a>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</Layouts>
