---
import Layouts from "../layouts/Layouts.astro";
import Nav from "../components/header/Nav.astro";
import Foot from "../components/header/Foot.astro";
---

<Layouts title="Edit profile">
  <Nav />
  <div class="h-full">
    <div class="border-b-2 block md:flex">
      <div class="w-full md:w-2/5 p-4 sm:p-6 lg:p-8 bg-white shadow-md">
        <div class="flex justify-between">
          <span class="text-2xl font-bold block text-[#496b63]">Profile</span>
          <a
            href="/dasbord"
            class="-mt-2 text-md font-bold text-white bg-gray-700 rounded-full px-5 py-2 hover:bg-gray-800"
            >Back</a
          >
        </div>

        <span class="text-[#496b63]"
          >This information is secret so be careful</span
        >
        <div class="w-full p-8 mx-2 flex justify-center flex-col items-center">
          <img
            id="showImage"
            class="max-w-xs w-32 items-center border"
            src="https://images.unsplash.com/photo-1477118476589-bff2c5c4cfbb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=200&q=200"
            alt=""
          />
          <div class="mt-4">
            <div class="pb-6">
              <label for="name" class="font-semibold text-[#496b63] block pb-1"
                >Name</label
              >
              <div class="flex">
                <input
                  id="username"
                  class="border-1 rounded-r px-4 py-2 w-full text-[#496b63]"
                  type="text"
                  value="Jane Name"
                />
              </div>
            </div>
            <div class="pb-4">
              <label for="about" class="font-semibold text-[#496b63] block pb-1"
                >Email</label
              >
              <input
                id="email"
                class="border-1 rounded-r px-4 py-2 w-full text-[#496b63]"
                type="email"
                value="example@example.com"
              />
              <span class="text-[#496b63] pt-4 block opacity-70"
                >Personal login information of your account</span
              >
            </div>
          </div>
        </div>
      </div>

      <div class="w-full md:w-3/5 p-8 bg-white lg:ml-4 shadow-md">
        <div class="rounded shadow p-6">
          <div class="pb-6">
            <label for="name" class="font-semibold text-[#496b63] block pb-1"
              >Name</label
            >
            <div class="flex">
              <input
                id="username"
                class="border-1 rounded-r px-4 py-2 w-full"
                type="text"
                value="Jane Name"
              />
            </div>
          </div>
          <div class="pb-4">
            <label for="about" class="font-semibold text-[#496b63] block pb-1"
              >Email</label
            >
            <input
              id="email"
              class="border-1 rounded-r px-4 py-2 w-full"
              type="email"
              value="example@example.com"
            />
            <span class="text-[#496b63] pt-4 block opacity-70"
              >Personal login information of your account</span
            >
          </div>
        </div>
        <!-- Menambahkan tombol Save untuk menyimpan perubahan di elemen kedua -->
        <button
          onclick="saveChanges()"
          class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
          >Save Changes</button
        >
      </div>
    </div>
  </div>
  <Foot />
</Layouts>
