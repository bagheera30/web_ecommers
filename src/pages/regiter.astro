---
import Layouts from "../layouts/Layouts.astro";
import Foot from "../components/header/Foot.astro";
const title = "register";
---

<Layouts title={title}>
  <div class="navbar bg-neutral bg-opacity-9 fixed">
    <div class="flex-1">
      <a
        href="/"
        class="btn btn-ghost normal-case text-3xl text-neutral-content"
        >MultiSellerSquare</a
      >
    </div>
  </div>
  <div class="flex justify-center items-center h-screen bg-slate-900">
    <div class="w-96 p-6 bg-zinc-100 rounded-md shadow-lg">
      <h1 class="text-black text-4xl font-bold">Register</h1>
      <div class="py-3">
        <input
          type="text"
          placeholder="Nama"
          class="input input-bordered w-full max-w-xs"
        />
      </div>
      <div class="py-3">
        <input
          type="text"
          placeholder="NO. Hanphone"
          class="input input-bordered w-full max-w-xs"
        />
      </div>
      <div class="py-3">
        <input
          type="email"
          placeholder="Email"
          class="input input-bordered w-full max-w-xs"
        />
      </div>
      <div class="py-3">
        <input
          type="password"
          placeholder="Password"
          class="input input-bordered w-full max-w-xs"
        />
      </div>
      <div class="text-center">
        <a href="/dasbord"
          ><button class="w-full btn btn-neutral bg-red-600">register</button
          ></a
        >
      </div>
      <div class="w-96 h-5 justify-center items-center gap-9 inline-flex">
        <div class="w-20 h-px border border-black border-opacity-50"></div>
        <div
          class="text-black text-opacity-50 text-lg font-normal font-['Roboto']"
        >
          sudah punya akun?
        </div>
        <div class="w-20 h-px border border-black border-opacity-50"></div>
      </div>
      <div class="text-center py-5">
        <a href="/login"
          ><button class="w-full btn btn-neutral bg-red-600">Login</button></a
        >
      </div>
    </div>
  </div>
</Layouts>
<Foot />
