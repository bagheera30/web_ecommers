    </thead>
    <tbody>
      <!-- row 1 -->
      {
        api.data?.map((product) => {
          return (
            <tr>
              <td>{product.name}</td>
              <td>{product.deskripsi}</td>
              <td>$ {product.price}</td>
              <td>
                <a href={`/Products/update/${product.id}`}>
